
<div class="container">
  <div id="burgerSlide" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../public/assets/eatdaburger.jpg" class="d-block w-100" alt="eatdaburger">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="burger">Burger</label>
    <input type="text" class="form-control" id="burger">
  </div>
  <div class="row">
    <ul class="list-group">
      <li class="list-group-item">
        <div>
          <h3>{{this.burger_name}}</h3>
          <button type="submit" id="addBurger" class = "btn btn-success">Add Burger</button>
        </div>
      </li>
    </ul>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <ul id="notDevoured" class="list-group">
      <h2>Burgers to Eat</h2>
      {{#each burgers}}
      {{#unless this.devoured}}
      <li id="{{this.id}}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
          <button 
          data-burger_name="{{this.burger_name}}"class="eat btn btn-info">Devour it!</button>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <ul id="devoured" class="list-group">
      <h2>Burgers Eaten</h2>
      {{#each burgers}}
      {{#if this.devoured}}
      <li id="{{this.id}}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
        </div>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>