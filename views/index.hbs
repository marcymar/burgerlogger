<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">
    Eat-Da-Burger!
  </span>
</nav>
<div class="container">
<img src="../assets/image.png" alt="image"></div>
  <div class="container">
    <div class="form-group">
      <label for="newBurger">Burger Name:</label>
      <input type="text" class="form-control" id="newBurger">
    </div>
    <div class="row">
      <ul class="list-group">
        <li class="list-group-item">
          <div>
            <h3>{{this.burger_name}}</h3>
            <button type="submit" id="addBurger" class = "btn btn-success">Add Burger</button>
          </div>
        </li>
      </ul>
    </div>
</div>
<hr>
<div class="row">
  <div class="col-md-6">
    <ul id="notDevoured" class="list-group">
      <h2>Burgers to Eat</h2>
      {{#each burgers}}
      {{#unless this.devoured}}
      <li id="{{this.id}}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
          <button 
          data-burger_name="{{this.burger_name}}"class="eat btn btn-info">Devour it!</button>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <ul id="devoured" class="list-group">
      <h2>Burgers Eaten</h2>
      {{#each burgers}}
      {{#if this.devoured}}
      <li id="{{this.id}}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
        </div>
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>