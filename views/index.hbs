
<div class="container">
  <div id="burgerSlide" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../assets/eatdaburger.jpg" class="d-block w-100" alt="eatdaburger">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="newBurger">Burger</label>
    <input type="text" class="form-control" id="newBurger">
  </div>
  <div class="row">
    <ul class="list-group">
      <li class="list-group-item">
        <div>
          <h3>{{this.burger_name}}</h3>
          <button class = "btn btn-success">Add Burger</button>
        </div>
      </li>
    </ul>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-6">
    <ul id="notEaten" class="list-group">
      <h2>Burgers to Eat</h2>
      {{#each burgers}}
      {{#unless this.notEaten}}
      <li id="{this.burger_name}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
          <button class="eat btn btn-info"
          data-burger_name="{{this.burger_name}}">Devour it!</button>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <ul id="notEaten" class="list-group">
      <h2>Burgers to Eat</h2>
      {{#each burgers}}
      {{#if this.notEaten}}
      <li id="{this.burger_name}" class="list-group-item">
        <div class="d-flex w-100 justify-content-between">
          <h4 class="mb-1">{{this.burger_name}}</h4>
        </div>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>